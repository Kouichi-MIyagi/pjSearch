<h3>トピック一覧</h3>

<table class="table table-striped table-bordered table-condensed">

  <tr>
    <th>タイトル</th>
    <th>トピックス</th>
    <th>表示期限</th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= simple_format(topic.title) %></td>
    <td><%= simple_format(topic.contents) %></td>
    <td><%= topic.effective_to %></td>
    <td><%= link_to t('Show'), topic %>
    <% if can? :update,@topics %>
      <%= link_to t('Edit'), edit_topic_path(topic) %>
      <%= link_to t('Destroy'), topic, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if can? :update,@topics %>
<%= link_to 'トピック登録', new_topic_path %>
<% end %>