  <tr>
    <th width="65%">設問</th>
    <th>回答</th>
	<tr></tr>
    <th COLSPAN="2">コメント</th>
  </tr>

<% @response.response_items.each do |response_item| %>
  <tr>
    <td><%= response_item.question %></td>
    <td><%= response_item.selection_item %></td>
	<tr></tr>
    <td COLSPAN="2"><%= response_item.comment %></td>
  </tr>
<% end %>
</table>


